{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "outDir": "dist",
    "types": ["jest", "node", "ramda", "table"],
    "allowJs": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}
